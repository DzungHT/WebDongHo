@model IEnumerable<WebDongHo.DbContext.Sanpham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section CustomCSS{
    <link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
    <style>
        td {
            text-align: center;
            vertical-align: middle !important;
        }

        th {
            text-align: center !important;
            background-color: #337ab7 !important;
            color: #fff;
        }
    </style>
}
<div class="row">
        <div class="col-lg-12">
            <p style="margin-top:20px">
                <a href="/Admin/Sanphams/Create" class="btn btn-primary">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i> Tạo mới
                </a>
            </p>
            <table id="myTable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th width="150px">Chức năng</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ten)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LoaiSPID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Giagoc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Giaban)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Soluong)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Khuyenmai)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsNoibat)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hienthi)
                        </th>
                        


                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href="/Admin/Sanphams/Details/@item.SanphamID" class="btn btn-info btn-circle" title="Xem chi tiết" data-toggle="tooltip" data-placement="top">
                                    <i class="fa fa-info" aria-hidden="true"></i>
                                </a>
                                <a href="/Admin/Sanphams/Edit/@item.SanphamID" class="btn btn-warning btn-circle" title="Sửa nội dung" data-toggle="tooltip" data-placement="top">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                                <a href="/Admin/Sanphams/Delete/@item.SanphamID" class="btn btn-danger btn-circle" title="Xóa" data-toggle="tooltip" data-placement="top">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ten)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoaiSP.Ten)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Giagoc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Giaban)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Soluong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Khuyenmai)%
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsNoibat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hienthi)
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <!-- /.col-lg-12 -->
    </div>


