@model IEnumerable<WebDongHo.DbContext.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section CustomCSS{
    <link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
    <style>
        td {
            text-align: center;
            vertical-align: middle !important;
        }

        th {
            text-align: center !important;
            background-color: #337ab7 !important;
            color: #fff;
        }
    </style>
}
<div class="row">
    <div class="col-lg-12">
        <p style="margin-top:20px">
            <a href="/Admin/Accounts/Create" class="btn btn-primary">
                <i class="fa fa-plus-circle" aria-hidden="true"></i> Tạo mới
            </a>
        </p>
        <table id="myTable" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th width="150px">Chức năng</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hoten)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ngaysinh)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SDT)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.UrlAvatar)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Trangthai)
                    </th>

                </tr>
            </thead>

            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="/Admin/Accounts/Details/@item.AccountID" class="btn btn-info btn-circle" title="Xem chi tiết" data-toggle="tooltip" data-placement="top">
                                                <i class="fa fa-info" aria-hidden="true"></i>
                                            </a>
                                            <a href="/Admin/Accounts/Edit/@item.AccountID" class="btn btn-warning btn-circle" title="Sửa nội dung" data-toggle="tooltip" data-placement="top">
                                                <i class="fa fa-pencil" aria-hidden="true"></i>
                                            </a>
                                            <a href="/Admin/Accounts/Delete/@item.AccountID" class="btn btn-danger btn-circle" title="Xóa" data-toggle="tooltip" data-placement="top">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Username)
                                        </td>
                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Hoten)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ngaysinh)
                                        </td>
                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SDT)
                                        </td>
                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UrlAvatar)
                                        </td>
                                        <td>
                                            @if (item.Role == 1)
                                            {
                                                <div>Quản lý account</div>
                                            }
                                            @if (item.Role == 1)
                                            {
                                                <div>Không được quản lý account</div>
                                            }
                                            else
                                            {
                                                <div>Tài khoản người dùng</div>
                                            }

                                        </td>
                                        <td>
                                            @if (item.Trangthai == 2)
                                            {
                                                <a class="btn btn-circle btn-danger" title="Đã bị khóa" data-toggle="tooltip" data-placement="top">
                                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-circle btn-success" title="Mở khóa" data-toggle="tooltip" data-placement="top">
                                                    <i class="fa fa-unlock" aria-hidden="true"></i>
                                                </a>
                                            }
                                        </td>
                                        
                                    

                    </tr>
                }
            </tbody>
        </table>

    </div>
    <!-- /.col-lg-12 -->
</div>




