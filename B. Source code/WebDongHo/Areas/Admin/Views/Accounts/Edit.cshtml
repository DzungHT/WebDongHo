@model WebDongHo.DbContext.Account

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section CustomCSS{
    <style>
        .btn {
            width: 150px;
        }
    </style>
}

